pipeline {
      agent any
          stages {
               stage('Clone Repository') {
               steps {
               checkout scm
               }
          }
          stage('Build Image') {
               steps {
               sh "docker build -t johnenoel/capstone_image ."
               }
         }
         stage('Push image') {
               steps {
               sh 'docker push johnenoel/capstone_image'
               }
         }
         stage('Testing') {
              steps {
                    echo 'Testing...'
                    }
         }
}
}

